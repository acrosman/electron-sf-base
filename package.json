{
  "name": "electron-sf-base",
  "version": "0.0.1",
  "description": "An Electron Wrapper on JSForce that is meant to be extended.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint --ignore-path .gitignore src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -wlm",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --coverage --passWithNoTests"
  },
  "build": {
    "appId": "com.electron.electronForce",
    "productName": "ElectronForce",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "electron-force-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ]
    },
    "nsis": {
      "runAfterFinish": true,
      "artifactName": "electron-force-${version}.${ext}"
    },
    "portable": {
      "artifactName": "electron-force.exe"
    },
    "linux": {
      "target": "zip"
    }
  },
  "keywords": [
    "Electron",
    "JSForce",
    "Salesforce"
  ],
  "author": "Aaron Crosman <acrosman@gmail.com> (https://spinningcode.org)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acrosman/electronForce"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "bootswatch": "^4.5.2",
    "fs-extra": "^8.1.0",
    "jquery": "^3.5.1",
    "jquery.json-viewer": "^1.4.0",
    "jsforce": "^1.10.1",
    "minimist": "^1.2.5",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "debug-menu": "^0.6.1",
    "electron": "^22",
    "electron-builder": "^22.8.1",
    "electron-debug": "^2.2.0",
    "electron-reloader": "^1.1.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.0.6"
  }
}
